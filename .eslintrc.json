{
  "extends": "airbnb-base",
  "env": {
     "es6": true,
     "browser": true,
     "jest": true
  },
  "rules": {
    "no-shadow": "off",
    "class-methods-use-this": ["error", { "exceptMethods": ["addBoard", "addCloseIcon"] }],
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}